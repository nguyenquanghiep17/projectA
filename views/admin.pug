html
  include ./layouts/dashboard
  body
    .content
      nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark.row
        a.col-10.navbar-brand(href='#') Bảng điều khiển
        #navbarCollapse.collapse.navbar-collapse.col-2
          ul.navbar-nav
            li
              a.username(href='#') #{user.username}
            li 
              p.username(style='display:inline') |
            li.nave-item
              a.username(href='dang-xuat')   
                |   Đăng xuất
      .center
        .left-screen
            .dashboard
                ul.navbar-nav
                    li.nav-item
                      p#a1.nav-link Cấp tài khoản
                    li.nav-item
                      p#a2.nav-link Nhập danh sách đủ điều kiện 
                    li.nav-item
                      p#a3.nav-link Lập danh sách đủ không điều kiện 
                    li.nav-item
                      p#a4.nav-link Danh sách học phần
                    li.nav-item
                      p#a5.nav-link Quản lý ca thi
          

        .right-screen

          form#addStudent(action="/quan-tri/cap-tai-khoan", method='POST', enctype='multipart/form-data').form-signin.center
            input#inputEmail.form-control(type='file', name='myfile')
            br
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Up file
          
          form#addSubjects(action='/quan-tri/quan-ly-ca-thi', method='POST').form-signin.center
            //img.mb-4(src='/docs/4.3/assets/brand/bootstrap-solid.svg', alt='', width='72', height='72')
            input#inputEmail.form-control(type='username', placeholder='Mã học phần', required='', autofocus='' name='code')
            br
            input#inputPassword.form-control(type='username', placeholder='Tên học phần', required='' name='name')
            br
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Thêm

          hr#addSubjects1

          table.table#addSubjects2
            thead.thead-dark
              tr
                th(scope='col') Mã học phần
                th(scope='col') Tên môn học
            tbody
              each subject in subjectSchema
                tr
                  td= subject.code
                  td= subject.name


            




        include ./layouts/footer
        script(src='https://code.jquery.com/jquery-latest.js')
        script(src='../public/javascripts/dashboard.js')
        

